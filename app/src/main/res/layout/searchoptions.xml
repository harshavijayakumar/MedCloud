<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
  >


    <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Submit"
            android:id="@+id/searchbutton"
        android:layout_below="@+id/spinner4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Pillname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/editText6"
        android:layout_alignBottom="@+id/editText6"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"


        android:layout_alignBaseline="@+id/spinner2"
        android:layout_alignBottom="@+id/spinner2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_alignBaseline="@+id/spinner3"
        android:layout_alignBottom="@+id/spinner3"
        android:layout_alignParentStart="true"></TextView>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText6"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/spinner2"
        android:entries="@array/year_arrays1"
        android:prompt="@string/year_prompt"
        android:layout_below="@+id/editText6"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/spinner3"
        android:entries="@array/year_arrays2"
        android:prompt="@string/year_prompt"
        android:layout_below="@+id/spinner2"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/spinner4"
        android:entries="@array/year_arrays3"
        android:prompt="@string/year_prompt"
        android:layout_below="@+id/spinner3"
        android:layout_alignParentEnd="true" />

</RelativeLayout>